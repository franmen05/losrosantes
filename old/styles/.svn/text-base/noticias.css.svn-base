/* noticias */

h2{
	text-align:left;
}

.detalles{
	color:#06F;
	font-size:12px;
	font-family:"Comic Sans MS", cursive;	
}
	

.noticiaForm {
  margin-left:4%;
}

fieldset {
  background:#BCDBB5;
  border:1px solid #C4D3EA;
  clear:both;
  margin:0 7% 0% 7%;
  padding:1em 1.4em 1.4em;
  border.radius: 10px;  
 -moz-border-radius:10px;  
 -webkit-border-radius:10px; 
}

fieldset legend {
  background:#D2FFD2;
  border:1px solid #C4D3EA;
  color:#336699;
  font-size:1.2em;
  font-weight:bold;
  margin:0 -0.4em;
  padding:5px 10px;
  text-transform:capitalize;
  border.radius: 10px;  
 -moz-border-radius:10px;  
 -webkit-border-radius:10px;  
}
.noticiaForm div.field {
  margin-bottom:10px;
}

.noticiaForm label {
  color:#555555;
  float:left;
  font-size:14px;
  font-weight:bold;
  margin-top:9px;
  text-align:right;
  text-transform:capitalize;

}

.noticiaForm input[type="submit"] {
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  background:#395C8A;
  border:3px solid #83A4CA;
  color:#FFFFFF;
  display:block;
  font-size:120%;
  font-weight:bold;
  letter-spacing:0;
  margin:0;
  min-width:120px;
  width:auto !important;
}

.noticiaForm input,
.noticiaForm textarea,
.noticiaForm select {
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  background-color:#FFFFFF;
  border:2px solid #CCCCCC;
  color:#666666;
  font-family:"Lucida Grande","Helvetica Neue",Helvetica,Arial,Verdana,sans-serif;
  font-size:1.1em;
  margin-left:20px;
  padding:5px;
  width:70%;
}
.noticiaForm select {
 padding-left:5px;
}

.noticiaForm input[type=text]:focus, 
.noticiaForm textarea:focus {
  background:#FFFFFF;
  border:2px solid #EF9E4D;
}

.noticiaForm div.submit {
  float:right;
  padding-right:2em;
}