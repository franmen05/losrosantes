/*/button ver */
a.button {
	font-size:18px;
	color:#FFF;
	text-decoration:none;
	display:block;
	width:158px;
	
	border:1px solid #CCC;
	-moz-border-radius:5px;
	-webkit-border-radius:5px;
	-o-border-radius:5px;
	border-radius:5px;

	background:#09F;
	
	-webkit-transition: all .4s ease-in-out;
	-moz-transition: all .4s ease-in-out;
	-o-transition: all .4s ease-in-out;
	transition: all .4s ease-in-out;

}

a.button:hover {
	color:#00F;
	border-color:#3278BE;
}
a.button:active {
	background:#4195DD;
	background:-webkit-gradient(linear, 0% 0%, 0% 100%, from(#09F), to(#0CC));
	background:-moz-linear-gradient(0% 90% 90deg, #09F, #0CC);
}
/**buton  ver fin*/